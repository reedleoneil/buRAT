<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Android10$PlaceholderFragment">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchmanualremote"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOn="Remote"
        android:onClick="onElectricFanClicked" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_alignLeft="@+id/toggleButton1"
        android:layout_alignStart="@+id/toggleButton1"
        android:layout_alignRight="@+id/toggleButton1"
        android:layout_alignEnd="@+id/toggleButton1"
        android:textOn="2"
        android:textOff="2"
        android:onClick="onElectricFanClicked"
        android:layout_below="@+id/switchmanualremote" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton1"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignLeft="@+id/buttonoff"
        android:layout_alignStart="@+id/buttonoff"
        android:layout_alignRight="@+id/buttonoff"
        android:layout_alignEnd="@+id/buttonoff"
        android:textOn="1"
        android:textOff="1"
        android:onClick="onElectricFanClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/buttonoff"
        android:layout_below="@+id/toggleButton1"
        android:layout_alignLeft="@+id/switchmanualremote"
        android:layout_alignStart="@+id/switchmanualremote"
        android:layout_alignRight="@+id/switchmanualremote"
        android:layout_alignEnd="@+id/switchmanualremote"
        android:onClick="onElectricFanClicked" />

</RelativeLayout>
