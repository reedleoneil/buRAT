<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Android10$PlaceholderFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        android:id="@+id/buttonturnonpc"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonshutdownpc"
        android:layout_alignStart="@+id/buttonshutdownpc"
        android:layout_alignRight="@+id/buttonshutdownpc"
        android:layout_alignEnd="@+id/buttonshutdownpc"
        android:onClick="onComputerClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutdown"
        android:id="@+id/buttonshutdownpc"
        android:layout_below="@+id/buttonturnonpc"
        android:layout_centerHorizontal="true"
        android:onClick="onComputerClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/buttonrestartpc"
        android:layout_below="@+id/buttonshutdownpc"
        android:layout_alignLeft="@+id/buttonshutdownpc"
        android:layout_alignStart="@+id/buttonshutdownpc"
        android:layout_alignRight="@+id/buttonshutdownpc"
        android:layout_alignEnd="@+id/buttonshutdownpc"
        android:onClick="onComputerClicked"/>
</RelativeLayout>
